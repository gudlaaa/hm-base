<?xml version="1.0"?>
<ruleset>
    <!-- Use HM Coding Standards -->
    <rule ref="vendor/humanmade/coding-standards">
	    <!-- Don't restrict namespaced functions to `namespace.php` -->
        <exclude name="HM.Files.FunctionFileName" />

        <!-- Don't restrict namespace to `inc/` directory -->
        <exclude name="HM.Files.NamespaceDirectoryName" />

        <!-- Disable check from phpcbf - as its fixing things that should be allowed. -->
        <exclude phpcbf-only="true" name="PEAR.Functions.FunctionCallSignature"/>
    </rule>

    <file>./content/themes/hm-base-theme</file>
    <file>./content/mu-plugins/blocks</file>
</ruleset>
